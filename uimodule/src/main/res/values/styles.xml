<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Display_4">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">112sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Display_3">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">56sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Display_2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Display_1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Headline">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Headline.white">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Headline.light_grey">
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Subheading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Subheading.white">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Subheading.grey">
        <item name="android:textColor">@color/text_grey</item>
    </style>

    <style name="ItemList">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Body_2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Body_2.High">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Body_1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Body_1.Accent">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="search_view_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:queryHint">@color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:color">@color/white</item>
    </style>


    <style name="Caption">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>


</resources>
