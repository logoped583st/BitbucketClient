<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="bushuk.stanislau.bitbucketproject.presentation.pullrequest.comments.PullRequestCommentsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.pullrequest.comments.PullRequestCommentsFragment">


        <ImageView
            android:id="@+id/pullreuqest_comments_screen_error"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginBottom="@dimen/margin_size_small"
            android:src="@drawable/ic_error_no_items"
            app:layout_constraintBottom_toTopOf="@+id/pullreuqest_comments_screen_error_text"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="@{viewModel.liveLoadingModel.noInfo}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pullreuqest_comments_screen_recycler"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/pullreuqest_comments_screen_error_text"
            style="@style/Headline.light_grey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="72dp"
            android:layout_marginEnd="@dimen/margin_size_small"
            android:layout_marginStart="@dimen/margin_size_small"
            android:layout_marginTop="@dimen/margin_size_small"
            android:visibility="@{viewModel.liveLoadingModel.noInfo}"
            android:text="@{viewModel.liveLoadingModel.errorText}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pullreuqest_comments_screen_error"
            app:layout_constraintVertical_chainStyle="packed" />

        <ProgressBar
            android:id="@+id/pullreuqest_comments_screen_progressBar"
            android:layout_width="wrap_content"
            android:visibility="@{viewModel.liveLoadingModel.loading}"
            android:layout_height="wrap_content"
            android:background="@drawable/progress_bar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pullreuqest_comments_screen_recycler" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/pullreuqest_comments_screen_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>