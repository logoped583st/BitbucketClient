<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="fragment"
            type="bushuk.stanislau.bitbucketproject.presentation.repositories.RepositoriesFragment" />

        <variable
            name="viewModelRepositories"
            type="bushuk.stanislau.bitbucketproject.presentation.repositories.RepositoriesViewModel" />

    </data>

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/repositories_screen_slide_panel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        app:umanoOverlay="false"
        app:umanoShadowHeight="0dp"
        app:umanoPanelHeight="0dp">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/repositories_screen_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            tools:context=".presentation.repositories.RepositoriesFragment">

            <ImageView
                android:id="@+id/repositories_screen_error"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_marginBottom="@dimen/margin_size_small"
                android:src="@drawable/ic_error_no_items"
                android:visibility="@{viewModelRepositories.repositoriesDataSourceFactory.repositoriesDataSource.noRepositories}"
                app:layout_constraintBottom_toTopOf="@+id/repositories_screen_error_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/repositories_screen_recycler"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/repositories_screen_error_text"
                style="@style/Headline.light_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="72dp"
                android:layout_marginEnd="@dimen/margin_size_small"
                android:layout_marginStart="@dimen/margin_size_small"
                android:layout_marginTop="@dimen/margin_size_small"
                android:text="@{viewModelRepositories.repositoriesDataSourceFactory.repositoriesDataSource.noRepositoriesText}"
                android:visibility="@{viewModelRepositories.repositoriesDataSourceFactory.repositoriesDataSource.noRepositories}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/repositories_screen_error"
                app:layout_constraintVertical_chainStyle="packed" />

            <ProgressBar
                android:id="@+id/repositories_screen_progressBar"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/progress_bar"
                android:visibility="@{viewModelRepositories.repositoriesDataSourceFactory.repositoriesDataSource.loading}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/repositories_screen_recycler" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/repositories_screen_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/repositories_screen_settings_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:menu_colorNormal="@color/colorAccent"
                app:menu_fab_size="normal"
                app:menu_icon="@drawable/ic_settings_black_24dp">

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/repositories_screen_add_repo_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_black_24dp"
                    app:fab_colorNormal="@color/colorAccent"
                    app:fab_size="mini" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/repositories_screen_filter_fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{fragment::clickFilterFab}"
                    android:src="@drawable/ic_filter_list_black_24dp"
                    app:fab_colorNormal="@color/colorAccent"
                    app:fab_size="mini" />

            </com.github.clans.fab.FloatingActionMenu>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.SearchView
                android:id="@+id/repositories_screen_searchView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_size_medium"
                android:layout_marginStart="@dimen/margin_size_medium"
                android:layout_marginTop="@dimen/margin_size_small"
                app:iconifiedByDefault="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:queryHint="Search" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/repositories_screen_spinner_language"
                android:layout_width="0dp"
                android:onItemSelected="@{fragment::changeLanguageFilter}"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="@+id/repositories_screen_spinner_access"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/textView3" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/repositories_screen_spinner_access"
                android:layout_width="0dp"
                android:onItemSelected="@{fragment::changeAccessFilter}"
                android:layout_height="wrap_content"
                android:layout_marginEnd="32dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                style="@style/Subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:text="@string/repositories_screen_spinner_access_text"
                app:layout_constraintEnd_toStartOf="@+id/repositories_screen_spinner_access"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/repositories_screen_searchView" />

            <TextView
                android:id="@+id/textView3"
                style="@style/Subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="32dp"
                android:text="@string/repositories_screen_spinner_language_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/repositories_screen_spinner_language"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

        </android.support.constraint.ConstraintLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</layout>